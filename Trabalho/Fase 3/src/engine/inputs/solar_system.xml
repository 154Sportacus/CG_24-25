<world>
  <!-- Window config -->
  <window width="1980" height="720"/>
  
  <!-- Camera config -->
  <camera>
    <position x="300" y="200" z="300"/>
    <lookAt x="0" y="0" z="0"/>
    <up x="0" y="1" z="0"/>
    <projection fov="60" near="1" far="1000"/>
  </camera>
  
  <!-- Solar system group -->
  <group>
    <!-- Sun -->
    <group>
      <transform>
        <scale x="30" y="30" z="30"/>
      </transform>
      <models>
        <model file="sphere.3d"/>
      </models>
    </group>

    <!-- Mercury -->
    <group>
      <transform>
        <rotate angle="0" x="0" y="1" z="0"/>
        <translate x="40" y="0" z="0"/>
        <scale x="0.5" y="0.5" z="0.5"/>
      </transform>
      <models>
        <model file="sphere.3d"/>
      </models>
    </group>

    <!-- Venus -->
    <group>
      <transform>
        <rotate angle="358" x="0" y="1" z="0"/>
        <translate x="60" y="0" z="0"/>
        <scale x="0.8" y="0.8" z="0.8"/>
      </transform>
      <models>
        <model file="sphere.3d"/>
      </models>
    </group>

    <!-- Earth and Moon -->
    <group>
      <transform>
        <rotate angle="355" x="0" y="1" z="0"/>
        <translate x="80" y="0" z="0"/>
      </transform>
      <!-- Earth -->
      <group>
        <transform>
          <scale x="1" y="1" z="1"/>
        </transform>
        <models>
          <model file="sphere.3d"/>
        </models>
      </group>
      <!-- Moon -->
      <group>
        <transform>
          <!-- Earth's Moon -->
          <translate x="5" y="0" z="0"/>
          <scale x="0.27" y="0.27" z="0.27"/>
        </transform>
        <models>
          <model file="sphere.3d"/>
        </models>
      </group>
    </group>

    <!-- Mars -->
    <group>
      <transform>
        <rotate angle="335" x="0" y="1" z="0"/>
        <translate x="100" y="0" z="10"/>
        <scale x="0.6" y="0.6" z="0.6"/>
      </transform>
      <models>
        <model file="sphere.3d"/>
      </models>
    </group>

    <!-- Jupiter -->
    <group>
      <transform>
        <rotate angle="270" x="0" y="1" z="0"/>
        <translate x="140" y="0" z="0"/>
        <scale x="12" y="12" z="12"/>
      </transform>
      <models>
        <model file="sphere.3d"/>
      </models>
    </group>

    <!-- Saturn -->
    <group>
      <transform>
        <rotate angle="180" x="0" y="1" z="0"/>
        <translate x="150" y="0" z="30"/>
      </transform>
      <!-- Saturn -->
      <group>
        <transform>
          <scale x="8" y="8" z="8"/>
        </transform>
        <models>
          <model file="sphere.3d"/>
        </models>
      </group>
      <!-- Saturn's Ring -->
      <group>
        <transform>
          <rotate angle="20" x="1" y="0" z="1"/>
          <scale x="11" y="11" z="11"/>
        </transform>
        <models>
          <model file="ring.3d"/>
        </models>
      </group>
    </group>

    <!-- Uranus -->
    <group>
      <transform>
        <rotate angle="255" x="0" y="1" z="0"/>
        <translate x="200" y="0" z="10"/>
        <scale x="4" y="4" z="4"/>
      </transform>
      <models>
        <model file="sphere.3d"/>
      </models>
    </group>

    <!-- Neptune -->
    <group>
      <transform>
        <rotate angle="183" x="0" y="1" z="0"/>
        <translate x="260" y="0" z="0"/>
        <scale x="3.8" y="3.8" z="3.8"/>
      </transform>
      <models>
        <model file="sphere.3d"/>
      </models>
    </group>
  </group>
</world>
